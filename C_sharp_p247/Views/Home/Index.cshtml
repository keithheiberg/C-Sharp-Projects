<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Sign Up</h5>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("SignUp", "Home", FormMethod.Post))
            {
            <div class="row no-gutters">
                <div class="form-group col-md-12">
                    <input name="FirstName" type="text" class="form-control" placeholder="First Name" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="LastName" type="text" class="form-control" placeholder="Last Name" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="EmailAddress" type="text" class="form-control" placeholder="Email Address" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="dateOfBirth" type="text" class="form-control" placeholder="Date of Birth" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarMake" type="text" class="form-control" placeholder="Car Make" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarModel" type="text" class="form-control" placeholder="Car Model" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="CarYear" type="text" class="form-control" placeholder="Car Year" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="DUI" type="text" class="form-control" placeholder="Any DUIs? Y or N" required />
                </div>
                <div class="form-group col-md-12">
                    <input name="Tickets" type="text" class="form-control" placeholder="Speeding tickets? Please enter an integer." required />
                </div>
                <div class="form-group col-md-12">
                    <input name="Coverage" type="text" class="form-control" placeholder="Full coverage or liability?" required />
                </div> 
                <div class="form-group col-md-12">
                    <input name="Quote" type="hidden" class="form-control" value="50.0" />
                    <input name="Removed" type="hidden" class="form-control" value="2019-01-01" />
                </div>
                <button type="submit" class="btn btn-block btn-primary">Submit</button>
            </div>
            }
        </div>
    </div>
</div>